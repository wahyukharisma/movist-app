<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Movist" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/curious_blue</item>
        <item name="colorPrimaryVariant">@color/eastern_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/eastern_blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="DefaultTopBar" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_h2</item>
    </style>

    <style name="DefaultMenuDetail" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">@dimen/text_h3</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DefaultContentDetail" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
</resources>